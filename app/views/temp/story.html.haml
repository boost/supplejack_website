
%section.header
	.container
		.row
			.medium-2.columns
				%aside.edit-tools
					Edit tools go here
			.medium-8.columns
				%h1= FFaker::Movie.title
				%h3 
					By 
					= link_to FFaker::Name.name, '#'
			.medium-2.columns

%section.table-of-contents
	.container
		.row
			.medium-4.columns
				%aside.edit-tools
					Edit tools go here
			.medium-4.columns
				%h4 Contents
				%ol
					%li= link_to "First section name", '#'
					%li= link_to "Second section name", '#'
					%li= link_to "Third section name", '#'
			.medium-4.columns


%section.image-panel
	.container
		.row
			.medium-2.columns
				%aside.edit-tools
					Edit tools go here
			.medium-8.columns
				= image_tag 'temp-image.jpg'
			.medium-2.columns
				%cite
					%h6 Name of item
					Citation information goes here

%section.image-panel.full-width
	.image-pad
		= image_tag 'temp-image.jpg'
	%cite
		%h6 Name of item
		Citation information goes here


%section.narrative-panel
	.container
		.row
			.medium-2.columns
				%aside.edit-tools
					Edit tools go here
			.medium-8.columns
	
				%h2 Section Header

			.medium-2.columns
				

%section.image-gallery
	.container
		.row
			- 8.times do 
				.large-3.medium-4.small-6.columns.gallery-item
					= image_tag 'temp-image.jpg'
					%cite
						%h6= FFaker::AddressAU.neighborhood
						= FFaker::Education.school



%section.narrative-panel
	.container
		.row
			.medium-2.columns
				%aside.edit-tools
					Edit tools go here
			.medium-8.columns.editable
	
				%h2 Section Header
	
				%p=raw FFaker::BaconIpsum.paragraphs(4).join('</p><p>')
			.medium-2.columns
				x



%section.add-panel 
	%h3.add-message.toggle-add-panel Add to your story...			
	.add-panel-inset
		.container
			.row
				.medium-3.columns.item-adder
					.adder-icon
					Text
				.medium-3.columns.item-adder
					.adder-icon
					your own image
				.medium-3.columns.item-adder
					.adder-icon
					item from digitalNZ
				.medium-3.columns.item-adder
					.adder-icon
					section
	%span.add-icon.toggle-add-panel +
